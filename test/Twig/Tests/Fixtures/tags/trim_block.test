--TEST--
Whitespace trimming on tags.
--TEMPLATE--
        {#- Comments can trim leading space #}
    <ul>
    {%- if leading %}
        <li>   {{- leading }}</li>
    {%- endif %}
    </ul>

{# Comments can trim trailing space -#}          
	<ul>
	{%- if trailing -%}	
		<li>{{ trailing -}}    </li>
	{%- endif -%}	
	</ul>

    <ul>
    {%- if mixed %}
        <li>    {{- mixed }}</li>
    {% endif -%}    
    </ul>

        {#- Comments can trim both -#}
    <ul>
    {%- if both -%}  
        <li>   {{- both -}}   </li>
    {%- endif -%}  
    </ul>
after
{{ 5 * '{#-'|length }}
{{ '{{-'|length * 5 + '{%-'|length }}
--DATA--
return array('leading' => 'leading space', 'trailing' => 'trailing tabs', 'mixed' => 'mixed tags', 'both' => 'both')
--EXPECT--
    <ul>
        <li>leading space</li>
    </ul>

	<ul>
		<li>trailing tabs</li>
	</ul>

    <ul>
        <li>mixed tags</li>
        </ul>

    <ul>
        <li>both</li>
    </ul>
after
