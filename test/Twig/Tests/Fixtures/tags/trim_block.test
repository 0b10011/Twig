--TEST--
Whitespace trimming on tags.
--TEMPLATE--
    <ul>
    {%- if string %}
        <li>{{ string }}</li>
    {%- endif %}
    </ul>

	<ul>
	{%- if trailing -%}	
		<li>{{ trailing }}</li>
	{%- endif -%}	
	</ul>

    <ul>
    {%- if mixed %}
        <li>{{ mixed }}</li>
    {% endif -%}    
    </ul>
--DATA--
return array('string' => 'a value', 'trailing' => 'trailing tabs', 'mixed' => 'mixed tags')
--EXPECT--
    <ul>
        <li>a value</li>
    </ul>

	<ul>
		<li>trailing tabs</li>
	</ul>

    <ul>
        <li>mixed tags</li>
        </ul>
